extends templates/main

block variables
  - var title = 'Pomodoro Timer'

block content
  .bg-blue
  .bg-red

  .timer
    //- Progress bar
    .timer__progress.
      <svg width="300" height="300">
        <circle
          cx="150"
          cy="150"
          r="140"
          stroke="rgba(250, 250, 250, 0.1)"
          stroke-width="5"
          fill="none" />
      </svg>
      <svg width="300" height="300" id="progress">
        <circle
          cx="150"
          cy="150"
          r="140"
          stroke="rgb(250, 250, 250)"
          stroke-width="5"
          stroke-dasharray="880"
          stroke-dashoffset="880"
          fill="none" />
      </svg>

    //- Timer
    .timer__time
      span.min
      span :
      span.sec

  //- Start button
  .controls
    button.btn.js-start Start
    button.btn.js-pause Pause
