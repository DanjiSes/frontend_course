doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title MNTN
    link(rel="stylesheet", href="../scss/style.scss")
  body
    //- Main
    main.main(style="background-image: url(../img/BG.jpg)")
      //- Header
      header.header 
        //- Logo
        strong.header__logo MNTN
        //- Nav
        -
          var nav = [
            ['#', 'Equipment'],
            ['#', 'About us'],
            ['#', 'Blog']
          ]

        nav.header__nav
          ul
            each link in nav
              li
                a(href=link[0])=link[1]
        
        a.header__account
          img(src="../img/account.svg", alt="")
          span Account

      //- Social links
      .main__social
        span Follow us
        a(href="#") 
          img(src="../img/instagram.svg", alt="")
        a(href="#") 
          img(src="../img/twitter.svg", alt="")

      //- Content
      .main__content
        span.label A Hiking guide
        h1.h1 Be prepared for the Mountains and beyond!
        a.link(href="#")
          span scroll down
          img(src="../img/arrow_downward_24px.svg", alt="")

      //- Section counter
      ul.counter
        li
          a(href="#").active Start
        li
          a(href="#") 01
        li
          a(href="#") 02
        li
          a(href="#") 03

    script(src="../js/index.js") 